<%= simple_form_for @contact_request,
                    url:    hire_conversation_path(@contact_request),
                    method: :post do |f| %>
    <%= f.input :message, as: :text %>
    <%= f.input :project_start %>
    <%= f.input :project_end %>
    <%= f.input :project_rate %>
    <%= f.input :project_name %>
    <%= f.input :project_location %>
    <%= f.input :travel_authorization_id, build_simple_form_dropdown(TravelAuthorization,
                                                                     collection: TravelAuthorization.all) %>
    <%= f.button :submit, 'Hire' %>
<% end %>
