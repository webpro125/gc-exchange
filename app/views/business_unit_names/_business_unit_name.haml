%tr
  %td{align: 'left'}= business_unit_name.name
  %td{align: 'left'}= business_unit_name.created_at.to_date
  %td{align: 'left'}
    = link_to 'Edit', edit_business_unit_name_path(business_unit_name), remote: true, class: 'button-primary'
    = link_to 'Remove', business_unit_name_path(business_unit_name),
      remote: true, method: :delete, class: 'button-secondary',
      data: { confirm: 'Are you sure you want to delete this Business Unit Name?' }