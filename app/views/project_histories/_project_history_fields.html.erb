<div class="row">
  <div class="large-12 columns">
    <%= f.input :position_ids, build_simple_form_dropdown(Position,
                                                          collection: Position.all,
                                                          input_html: { multiple: true,
                                                          data: { maximumSelectionSize: 3 } }) %>
  </div>
</div>
<div class="row">
  <div class="large-6 columns">
    <%= f.input :client_company %>
  </div>
  <div class="large-6 columns">
    <%= f.input :customer_name_id, build_simple_form_dropdown(CustomerName,
                                                              collection: CustomerName.all) %>
  </div>
</div>
<div class="row">
  <div class="large-6 columns">
    <%= f.input :project_type_id, build_simple_form_dropdown(ProjectType,
                                                             collection: ProjectType.all) %>
  </div>
  <div class="large-3 columns">
    <%= f.input :start_date %>
  </div>
  <div class="large-3 columns">
    <%= f.input :end_date %>
  </div>
</div>
<div class="row">
  <div class="large-6 columns">
    <%= f.input :client_poc_name %>
  </div>
  <div class="large-6 columns">
    <%= f.input :client_poc_email %>
  </div>
</div>
<div class="row">
  <div class="large-12 columns">
    <%= f.input :description, as: :text %>
  </div>
</div>
