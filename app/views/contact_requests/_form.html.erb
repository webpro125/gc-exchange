<%= simple_form_for @form, url: consultant_contact_requests_path(@consultant.id), method: :post do
|f| %>
    <%= f.error_notification %>
    <%= render 'shared/base_error', model: @contact_request %>

    <%= f.input :project_start %>
    <%= f.input :project_end %>
    <%= f.input :subject %>
    <%= f.input :message, as: :text, input_html: {class: 'small', cols: 5, rows: 5} %>

    <%= f.button :submit, t('views.sales_lead.new.save') %>
<% end %>
