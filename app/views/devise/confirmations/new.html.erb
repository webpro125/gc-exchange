<%= content_for :main_class, 'main' %>
<% content_for :header do %>
    <%= render 'layouts/header' %>
<% end %>
<header class="page-header">
  <h2>Resend confirmation instructions</h2>
</header>
<div class="page-content">
  <%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: {method: :post, class: 'theme-gces'}) do |f| %>
    <%= f.error_notification %>
    <%= f.full_error :confirmation_token %>
    <%= render 'shared/base_error', model: resource %>
    <fieldset class="note align-center">
        <p>If you did not receive your confirmation email, be sure to enter your correct email address
        and check your spam folder for the confirmation instructions.</p>
    </fieldset>
    <%= f.input :email, required: false, placeholder: 'Email', wrapper_html: {class: 'no-label'},
         label:false, wrapper: :custom_input, input_wrapper_html: { class: 'icon-email' } %>
    <div class="align-center air">
        <%= f.button :submit, "Resend confirmation instructions", class: 'button-primary button-cta center' %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
<% content_for :footer do %>
    <%= render 'layouts/footer' %>
<% end %>
<% content_for :js do %>
    <%= javascript_include_tag "dist_main" %>
<% end %>