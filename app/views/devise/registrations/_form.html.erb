<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
    <%= render 'shared/base_error', model: resource %>

    <div class="form-inputs">
      <%= f.input :email, required: true %>
      <%= f.input :first_name, required: true %>
      <%= f.input :last_name, required: true %>
      <%= f.input :password, required: true %>
      <%= f.input :password_confirmation, required: true %>
    </div>

    <p>
      <small>
      By clicking &ldquo;Sign up&rdquo;, you agree to our
      <%= link_to 'Terms of Service', terms_of_service_path, target: '_blank' %>
      and <%= link_to 'Privacy Policy', privacy_policy_path, target: '_blank' %>.
      You will also need to sign and agree to our
      <%= link_to 'Consultant Agreement',
                  'Independent Contractor and Service Activation Agreement.pdf',
                  target: '_blank' %>.
      </small>
    </p>

    <div class="form-actions">
      <%= f.button :submit, "Sign up" %>
    </div>
<% end %>
