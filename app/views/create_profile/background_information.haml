= render 'header'
= simple_form_for @form, url: create_profile_path(:background_information), method: :put do |f|
  .row
    .large-12.columns
      = f.error_notification
      = render 'shared/base_error', model: @form
  #bgquestions
    = f.simple_fields_for :background do |b|
      .row
        .large-12.columns
          = b.input :citizen, as: :radio_buttons
      .row
        .large-12.columns
          = b.input :convicted, as: :radio_buttons
      .row
        .large-12.columns
          = b.input :parole, as: :radio_buttons
      .row
        .large-12.columns
          = b.input :illegal_drug_use, as: :radio_buttons
      .row
        .large-12.columns
          = b.input :illegal_purchase, as: :radio_buttons
      .row
        .large-12.columns
          = b.input :illegal_prescription, as: :radio_buttons
      .row
        .large-12.columns
          = b.input :information_is_correct, as: :boolean
  = render 'footer', f: f
