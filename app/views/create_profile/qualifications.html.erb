<%= render 'header' %>

<%= simple_form_for @form, url: create_profile_path(:qualifications), method: :put do |f| %>
    <div class="row">
      <div class="small-12 columns">
        <%= f.error_notification %>
      </div>
    </div>
    <%= f.simple_fields_for :educations do |e| %>
        <div class="row">
          <div class="small-12 columns">
            <%= e.input :school %>
          </div>
        </div>
        <div class="row">
          <div class="small-8 columns">
            <%= e.input :field_of_study %>
          </div>
          <div class="small-4 columns">
            <%= e.input :degree_id, build_simple_form_dropdown(Degree, collection: Degree.all) %>
          </div>
        </div>
    <% end %>
    <div class="row">
      <div class="small-8 columns">
        <%= render 'profiles/certifications', f: f %>
      </div>
    </div>
    <div class="row">
      <div class="small-8 columns">
        <%= render 'profiles/skills', f: f %>
      </div>
    </div>
    <div class="row">
      <div class="small-12 columns">
        <%= link_to t('views.wizard.actions.previous'),
                    previous_wizard_path,
                    class: 'button secondary small' %>
        <%= f.button :submit, t('views.wizard.actions.save_and_next'), class: 'secondary small' %>
      </div>
    </div>
<% end %>
