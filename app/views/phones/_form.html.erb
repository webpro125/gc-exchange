<%= simple_form_for @phone do |f| %>
    <%= f.error_notification %>

    <%= f.input :number %>
    <%= f.association :phone_type, build_simple_form_dropdown(PhoneType) %>
    <%= f.check_box :primary %>
    <%= f.label :primary, I18n.t('simple_form.labels.phone.primary'),{class: "checkbox inline"} %>

    <%= f.button :submit, button_label %>
<% end %>
