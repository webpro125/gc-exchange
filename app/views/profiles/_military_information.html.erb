<div class="row">
  <div class="small-12 columns">
    <% if @consultant.military.present? %>
        <% if @consultant.military.clearance_active? %>
            <h4><%= t('views.profile.headers.clearance') %></h4>
            <%= t('simple_form.labels.military.clearance_active') %>:
            <%= boolean_to_human @consultant.military.clearance_active? %>
            <div id="security">
              <p>
                <strong><%= t('simple_form.labels.military.clearance_active') %>:</strong>
                <%= boolean_to_human @consultant.military.clearance_active? %><br>
                <% if @consultant.military.clearance_level %>
                    <strong><%= t('simple_form.labels.military.clearance_level') %>:</strong>
                    <%= @consultant.military.clearance_level.label %><br>
                <% end %>
                <% if @consultant.military.investigation_date %>
                    <strong><%= t('simple_form.labels.military.investigation_date') %>:</strong>
                    <%= @consultant.military.investigation_date.to_formatted_s(:month_and_year) %><br>
                <% end %>
                <% if @consultant.military.clearance_expiration_date %>
                    <strong><%= t('simple_form.labels.military.clearance_expiration_date') %>:</strong>
                    <%= @consultant.military.clearance_expiration_date.to_formatted_s(:month_and_year) %>
                <% end %>
              </p>
            </div>
        <% end %>

        <% if @consultant.military.military? %>
            <h4><%= t('views.profile.headers.military') %></h4>
            <div id="military">
              <p>
                <% if @consultant.military.branch %>
                    <strong><%= t('simple_form.labels.military.branch') %>:</strong>
                    <%= @consultant.military.branch.label %><br>
                <% end %>
                <% if @consultant.military.rank %>
                    <strong><%= t('simple_form.labels.military.rank') %>:</strong>
                    <%= @consultant.military.rank.label %><br>
                <% end %>
                <% if @consultant.military.service_start_date %>
                    <strong><%= t('activerecord.models.attributes.military.date') %>:</strong>
                    <%=  @consultant.military.service_start_date.to_formatted_s(:month_and_year) %> 
                    &ndash;
                    <%= @consultant.military.service_end_date.to_formatted_s(:month_and_year) %>
                <% end %>
              </p>
        <% end %>
    <% end %>
    </div>
  </div>
</div>
