<div class="row">
  <div class="small-8 columns">
    <%= render 'profiles/consultant_header' %>
    <div class="row">
      <div class="small-12 columns">
        <%= link_to t('views.profile.actions.download_resume'),
                    @consultant.resume.url,
                    class: 'button small secondary' %>
      </div>
    </div>
    <div class="row">
      <div class="small-12 columns">
        <%= render 'profiles/contact_information' %>
        <%= render 'profiles/background_and_history' %>
        <%= render @consultant.project_histories %>
      </div>
    </div>
  </div>
  <div class="small-4 columns">
    <%= render 'profiles/education' %>
    <%= render 'profiles/certification' %>
    <%= render 'profiles/expertise' %>
    <%= render 'profiles/military_information' %> <!-- if logged_in -->
  </div>
</div>
