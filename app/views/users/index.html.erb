<h1>Listing users</h1>

<table>
  <thead>
  <tr>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.full_name, company_user_path(@company, user) %></td>
        <td><%= link_to 'Edit', edit_company_user_path(@company, user),
                        class: 'button tiny secondary' %></td>
        <td><%= link_to 'Destroy', company_user_path(@company, user), method: :delete,
                data: { confirm: 'Are you sure?' }, class: 'button tiny alert' %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_company_user_path %>
