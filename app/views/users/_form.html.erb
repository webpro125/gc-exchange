<%= simple_form_for([@company, @user]) do |f| %>
    <%= f.error_notification %>
    <%= render 'shared/base_error', model: @user %>

    <div class="form-inputs">
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :email %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, 'Update User' %>
    </div>
<% end %>
