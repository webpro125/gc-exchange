%h2
  %span Question and Answers
  = link_to 'Create New Question', new_article_path, class: 'button tiny pull-right'
%ul.articles
  - @articles.each do |article|
    %li.article-item
      .article-item-cell
        = link_to article.title, article_comments_path(article), class: 'article-title-link'
        .article-meta
          %span
            opend
            = time_ago_in_words(article.created_at)
            = ' ago by ' + article_author_prefix(article.author) + article.author.full_name
      .article-item-cell.comments
        = article.comments.count

= paginate @articles