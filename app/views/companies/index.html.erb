<h1>Government Contractors</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= link_to company.company_name, company %></td>
        <td><%= link_to 'Edit',
                        edit_company_path(company),
                        class: 'button tiny secondary' if policy(company).edit? %></td>
        <td><%= link_to 'Destroy',
                        company,
                        method: :delete,
                        data: { confirm: { body: t('views.company.confirmations.delete')  } },
                        class: 'button tiny alert' if policy(company).destroy? %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add a Government Contractor', new_company_path %>
