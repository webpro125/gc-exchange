<article class="row consultant-profile">
  <div class="large-2 columns">
    <%= link_to consultant_path(consultant) do %>
      <%= image_tag(consultant.profile_image.url(:thumb), class: 'th profile-thumb') %>
    <% end %>
  </div>
  <div class="large-10 columns">
    <h5>
      <%= link_to consultant.full_name, consultant_path(consultant) %>
    </h5>
    <p>

      <% if user_signed_in?%>
        <strong>
          <%= t('simple_form.labels.military.clearance_level') %>:
        </strong>
        <%= if consultant.military && consultant.military.clearance_level
              consultant.military.clearance_level.label
            else
              t('activerecord.models.attributes.clearance_level.none')
            end
        %>
        <br />
      <% end %>
      <strong>
        <%= t('simple_form.labels.consultant.willing_to_travel') %>:
      </strong>
      <%= boolean_to_human consultant.willing_to_travel %>
    </p>
    <a class="read-more-toggle"
       href="#"
       data-more-text="<%= t('views.search.actions.more_information') %>"
       data-less-text="<%= t('views.search.actions.less_information') %>"></a>
    <div class="read-more-content">
      <p><%= consultant.abstract %></p>
    </div>
  </div>
</article>
