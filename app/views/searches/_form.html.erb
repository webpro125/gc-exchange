<%= simple_form_for @search, url: search_path do |f| %>
    <%= f.input :position_ids, build_simple_form_dropdown(Position,
                                                          collection: Position.all,
                                                          input_html: { multiple: true }) %>
    <%= f.input :clearance_level_ids, build_simple_form_dropdown(ClearanceLevel,
                                                                 collection: ClearanceLevel.all,
                                                                 input_html: { multiple: true }) %>
    <%= f.input :customer_name_ids, build_simple_form_dropdown(CustomerName,
                                                               collection: CustomerName.all,
                                                               input_html: { multiple: true }) %>
    <%= f.input :project_type_ids, build_simple_form_dropdown(ProjectType,
                                                              collection: ProjectType .all,
                                                              input_html: { multiple: true }) %>
    <%= f.input :address %>
    <%= f.input :distance, collection: [50, 100] %>
    <%= f.input :q %>

    <%= f.button :submit, 'Search' %>
<% end %>
