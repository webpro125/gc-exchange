- if !@new_design
  .sticky
    %nav.top-bar{"data-topbar" => ""}
      %ul.title-area
        %li.name
          = link_to root_path do
            #logo
        / Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone
        %li.toggle-topbar.menu-icon
          %a{:href => "#"}
            %span Menu
      %section.top-bar-section
        / Left Nav Section
        %ul.left
          - if user_signed_in?
            %li= link_to 'Home', root_path
          - if development?
            %li
              %a{"data-reveal-id" => "debug-modal", :href => "#"} Debug
          - if user_signed_in?
            %li.has-form
              .row.collapse
                = render 'layouts/search'
        / Right Nav Section
        %ul.right
          - if user_signed_in?
            = render 'shared/messages_link'
            %li= link_to t('views.offer.actions.menu'), projects_path
            %li= link_to 'Blog', articles_path
            %li= link_to 'Logout', destroy_user_session_path, method: :delete
          - else
            %li
              = link_to 'Home', root_path
            %li
              = link_to 'About Us', about_us_path
            %li.has-dropdown
              = link_to 'Register', new_user_registration_path
            %li.has-dropdown
              = link_to 'Login', new_user_session_path
            %li
              = link_to 'Contact Us', contact_us_path
- else
  - content_for :header do
    %header#main-header{:role => "banner"}
      = link_to 'GCES', root_path, class: 'site-brand'
      .head-scroller
        %nav.main-menu.menu-vertical{:role => "navigation"}
          %ul
            %li
              %a{:href => ""} What we do
            %li
              %a{:href => ""} Join the Exchange
            %li
              %a{:href => ""} Community Forum
            %li
              %a{:href => ""} Tutorials
            %li
              %a{:href => ""} Education
            %li
              %a{:href => ""} Articles
        %ul.qa-list{:style => "margin-top: 4rem;"}
          %li.is-active
            %span.ui-toggle{"data-target" => "qa-1", "data-type" => "cm-toggle"} What is a Draft Consultant Work Agreement?
            .qa-content.ui-target.is-open{"data-section" => "qa-1"}
              %p This is a sample of how to include answers in this qa list. Lorem ipsum sit amet quosque tandem numa lum consecter.
          %li What is a Statement of Work?
  %header.page-header.dashboard-header
    %nav.dashboard-menu{:role => "navigation"}
      %ul.menu-horizontal
        %li.active
          %a{:href => "index-2.html"} Company
        %li
          = link_to 'Projects', projects_path
        %li
          %a{:href => ""} Reports
        %li
          %a{:href => ""} Account