!!!
%html
  %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
  %meta{:charset => "utf-8"}/
  %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
  %title= content_for?(:title) ? yield(:title) : "Global Consultant Exchange"
  %title GCES Admin Panel
  = stylesheet_link_tag "application_admin", :media => "all", 'data-turbolinks-track' => true
  = javascript_include_tag "application_admin", 'data-turbolinks-track' => true
  = csrf_meta_tags
  - if defined?(@is_login_page).nil?
    - bodyClass = '' else bodyClass = 'gray-bg'
%body{:class => "#{bodyClass} #{yield(:body_class)}"}
  #wrapper
    = render 'layouts/admin/sidebar'
    .gray-bg#page-wrapper
      = render 'layouts/admin/header'
      = yield
