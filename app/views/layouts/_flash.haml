- if !@new_design
  - flash.each do |key, value|
    - next if key == 'timedout'
    %div{:class => "alert-box #{key} text-center", "data-alert" => ""}
      = value
      %a.close{:href => "#"} Ã—
- else
  - flash.each do |key, value|
    .page-content
      - if key != 'notice'
        - next if key == 'timedout'
        %div{:class => "ui-notification #{notification_class_name key}"}
          %p= value
          .action-close.icon-cross-light
      - else
        %section.ui-modal.no-head.flash{"data-type"=>"cm-modal", "data-modal-target"=>"notice-modal", "data-modal-flash" => "", "data-name" => "notice-modal"}
          .modal-box
            .modal-content
              .modal-scroller
                %h1 Congratulations!
                %p.type-description= value.html_safe
                = link_to 'Ok', '#', class: 'button-primary small', "data-modal-close" => ""
            %footer
              .modal-close.ui-action-icon.icon-cr-cross-light{"data-modal-close" => ""}