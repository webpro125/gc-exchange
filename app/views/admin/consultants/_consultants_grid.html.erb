<%= define_grid(@consultants_grid, show_filters: :always, hide_csv_button: true, hide_submit_button: true, hide_reset_button: true) do |g|

  g.column name: 'ID' do |data|
    data.id
  end

  g.column name: 'First Name', attribute: 'first_name' do |data|
    link_to data.first_name, admin_consultant_path(data)
  end
  g.column name: 'Last Name', attribute: 'last_name' do |data|
    link_to data.last_name, admin_consultant_path(data)
  end

  g.column name: 'Email', attribute: 'email' do |data|
    data.email
  end

  g.column name: 'Phone', assoc: :phones, attribute: 'number' do |data|
    data.phones.size > 0 ? data.phones.first.number_with_ext : ''
  end

  g.column name: 'Approved', assoc: :approved_status, attribute:  'code', filter: false do |data|
    'yes' if data.approved?
  end
  g.column name: 'Created Date', attribute: 'created_at', filter_type: :bootstrap_datepicker do |data|
    data.created_at.to_date
  end

  g.column name: 'Approved Date', attribute: 'date_approved', filter_type: :bootstrap_datepicker do |data|
    data.date_approved ? data.date_approved.to_date : nil
  end

end -%>