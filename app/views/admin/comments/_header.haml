.row.wrapper.border-bottom.white-bg.page-heading
  .col-lg-10
    %h2 Questions and Answers
    %ol.breadcrumb
      %li
        %a{:href => "#"}  Home
      %li
        = link_to 'Blog', admin_articles_path
      %li{:class => (mode == 'index' ? 'active' : '')}
        = link_to 'Comments', admin_article_comments_path(@article)
      - if mode != 'index'
        %li.active
          %strong= mode
.result-notice

- if flash[:notice]
  .alert.alert-info.custom-alert-margin.m-t-md
    = flash[:notice]