- page_title 'Registration Requests of General user'
.row
  .wrapper.wrapper-content.animated.fadeInRight
    = link_to admin_companies_path, :class => 'btn btn-sm btn-info pull-right m-b' do
      %i.fa.fa-long-arrow-left
      Back
    .ibox.float-e-margins
      .ibox-title
        %h5 Historical Log of User Requests
      .ibox-content
        %table.table
          %thead
            %tr
              %th User Name
              %th Company Name
              %th Email Address
              %th Work Phone
              %th Cell Phone
              %th Requested Date
              %th Action+
          %tbody
            - @requests.each do |request|
              %tr
                %td= request.user.full_name
                %td= request.company_name
                %td= request.user.email
                %td= request.work_phone
                %td= request.cell_phone
                %td= request.created_at.to_date
                %td
                  = link_to destroy_requested_company_admin_company_path(request), method: :delete,
                     data: { confirm: t('views.company.confirmations.delete_requested') },
                     :class => 'btn btn-xs btn-danger' do
                    %i.fa.fa-trash-o
                    Delete
        = paginate(@requests)